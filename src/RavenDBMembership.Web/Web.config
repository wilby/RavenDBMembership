      <dependentAssembly>
        <assemblyIdentity name="AsyncCtpLibrary" publicKeyToken="31bf3856ad364e35" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-1.0.4107.18181" newVersion="1.0.4107.18181" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
